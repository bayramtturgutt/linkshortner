      <div class="container-fluid">
            <div class="col-12 d-flex p-2 py-4 justify-content-center ">
              <form action="/create" id="myForm" autocomplete="off" method="post">

                <div class="formCon">
   
                <div class="lanOne">
                <input type="url" name="url" id="url" value="" placeholder="url here...">
                <label for="url">Enter Long Url</label>
                </div>

                <div class="lanOne">
                <input type="date" name="TimeDeletion" id="TimeDeletion">
                <label for="TimeDeletion">Enter Expiry Time</label>
                </div>

                <div class="lanOne">
                <select name="custom" id="custom">
                  <option value="false">No</option>
                  <option value="true">Yes</option>
                </select>
                <label for="custom">Is this Custom ShortUrl</label>
               </div>

                <div class="lanOne customUrlCon hidden" >
                <input type="text" value="" name="customUrl" placeholder="localhost:3001/...." id="customUrl">
                <label for="customUrl">Customise Your ShortUrl</label>
                </div>

                <div class="lanOne">
                  <select name="password" id="password">
                  <option value="false">No Password</option>
                  <option value="true">Password Protected</option>
                </select>
                <label for="password">Is there Password</label>
                </div>
                <div class="lanOne passwordValCon hidden">
                <input type="text" value="" name="passwordValue" id="passwordValue">
                <label for="passwordValue">Enter Password</label>
                </div>
                <div class="iRead">
                  <input type="checkbox" id="iRead">
